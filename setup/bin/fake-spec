#!/usr/bin/env ruby

amount = ARGV[0].to_i
name = ARGV[1]

amount.times do |t|
  what = [name, t + 1].join('_')
  File.open("#{what}_spec.rb", "w") do |file|
    file.puts("require 'spec_helper'\n")
    file.puts("RSpec.describe '##{what}' do")
    file.puts("  specify { expect('#{what}').to eq('#{what}') }")
    file.print("end")
  end
end

