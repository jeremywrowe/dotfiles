[user]
	name = Jeremy W. Rowe
	email = jeremywrowe@users.noreply.github.com
	signingkey = 0247B0B82D7A7CA0

[color]
  color  = auto
  branch = auto
  diff   = auto
  status = auto

[core]
	excludesfile = ~/.gitignore
	editor = code --wait

[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

[alias]
  # Shorthand Aliases
  br         = branch
  brr        = branch --remote
  ci         = commit
  co         = checkout
  st         = status
  pick       = cherry-pick
  pluck      = stash pop
  shave      = stash pop
  unstage    = reset HEAD
  wip        = commit --no-gpg-sign -m "wip"
  fresh      = clean -fd
  upstream   = !"git fetch && git log ..origin/master --patch"

[push]
  # default to tracking so git will only try to push the current branch
  # otherwise git push will push all branches which can be problematic if you have
  # changes in a branch that were not ready to be pushed (or if you use -f to force a push
  # will overwrite remote branches when you only wanted to force-push the current branch)
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[pull]
	default = current
[github]
	user = jeremywrowe
[web]
	browser = open
[commit]
	gpgsign = true
[branch]
  sort=-committerdate
