[user]
	name = Jeremy W. Rowe
	email = jeremywrowe@users.noreply.github.com

[color]
  color  = auto
  branch = auto
  diff   = auto
  status = auto

[core]
	excludesfile = ~/.gitignore
	editor = vim

[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

[alias]
  # Shorthand Aliases
  br         = branch
  brr        = branch --remote
  changes    = !"git diff ..origin/$(git cbranch)"
  ci         = commit
  co         = checkout
  pick       = cherry-pick
  pluck      = stash pop
  rebae      = rebase
  shave      = stash pop
  st         = status
  unstage    = reset HEAD

  # Helper Aliases
  added        = log --diff-filter=A
  cbranch      = rev-parse --abbrev-ref HEAD
  changed      = update-index --no-assume-unchanged
  pushr        = !"git push --set-upstream origin `git cbranch`"
  recent       = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format='%(refname:short)'
  unchanged    = update-index --assume-unchanged
  first-commit = !"git show `git rev-list --max-parents=0 HEAD`"

  # Log Aliases
  l  = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
  lf = "log --name-status --pretty=format:'%Cred%h%Creset -%C(yellow)%d %Cgreen(%cr) %C(bold blue)<%an>%Creset \n%s\n%Creset' --abbrev-commit --"
  lp = "log -p"
  lr = "log --grep=\"release/\" --format=\"%<(60)%Cred%D %Cgreen%h %<(18)%Cblue%cN %Creset%ad\""
  lt = "log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
  

[push]
  # default to tracking so git will only try to push the current branch
  # otherwise git push will push all branches which can be problematic if you have
  # changes in a branch that were not ready to be pushed (or if you use -f to force a push
  # will overwrite remote branches when you only wanted to force-push the current branch)
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[pull]
	default = current
[github]
	user = jeremywrowe
[web]
	browser = open
